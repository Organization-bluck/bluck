/* pages/pass/pass.wxss */
.pass-container{
  height: 100%;
  padding: 200rpx 0;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  background: #9cbcad;
}
.pass-container view{
  width: 200rpx;
  height: 200rpx;
  line-height: 200rpx;
  color: #fff;
  text-align: center;
  border-radius: 50%;
  box-shadow: 0 0 3px #000;
}
.pass-container text{font-size: 12px;}
.difficulty-model{background: blue}
.easy-model{background: palevioletred}