/* pages/question/question.wxss */

.q-container{
  display: flex;
  flex-direction: column;
  height: 100%;
}
.page-group{display: flex;
  flex-direction: row;
  padding: 20px;
  justify-content: space-around;
}
.page-group view{
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 16px;
  text-align: center;
  border: 1px solid #ddd;
  border-radius: 5px;
  background: -webkit-linear-gradient(top, #ccc, rgba(255, 255, 255, 0.5));
}

.q-content{
  display: flex;
  flex-direction: column;
  margin: 0 100px;
}
.q-header{
  display:flex;
  text-align: center;
  flex-direction: column;
}
.q-author{
  font-size: 12px;
  text-align: right
}
.q-main{
  text-align: center;
  margin: 20px 0;
}
.q-main text{
  display: block;
  margin-bottom: 10px;
}
.q-main input{
  margin-bottom: 10px;
  letter-spacing: 5px; 
  border-bottom: 1px solid #ccc;
}
.q-content image{
  width: 100%;
  height: 300rpx;
}

.q-container button{
  margin:  40px;
  background: #9cbcad;
  color: #fff;
}